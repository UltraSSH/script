# Configuração para ultracdnfast.online -> ultraplay.click
server {
    listen 80;
    server_name ultracdnfast.online www.ultracdnfast.online;

    location / {
        proxy_pass http://ultraplay.click:80;
        proxy_http_version 1.1;
        proxy_set_header Host ultraplay.click;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Connection "";  # Evita problemas com HTTP 1.1
        proxy_set_header Accept-Encoding "";  # Evita conflitos de compressão
        
        # Limitar velocidade para 10 Mbps (1 MB/s = 1048576 bytes/s)
        limit_rate 1310720;  # 10 Mbps em bytes (10 * 1024 * 1024 / 8)
        limit_rate_after 1m; # Após 1MB de transferência, aplica o limite

        proxy_buffering on;
        proxy_buffers 8 16k;
        proxy_buffer_size 32k;
    }
}

